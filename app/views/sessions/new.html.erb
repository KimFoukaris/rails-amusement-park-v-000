<%= form_tag signin_path, method: :post do |f| %>
  <label>Select User</label><br>
  <%= collection_select :user, :name, User.all, :name, :name %>

  <label>Password</label><br>
  <%= text_field_tag :password %><br>

  <%= submit_tag "Sign In" %>
  Or <%= link_to(controller: 'users', action: 'new') { 'sign up' } %>
<% end %>
